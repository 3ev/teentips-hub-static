{
    "name": "teentips-hub-static",
    "private": true,
    "browserslist": [
        "defaults"
    ],
    "engines": {
        "node": ">=16.0.0"
    },
    "scripts": {
        "dev": "sass ./src/sass/app.scss ./dist/css/app.css -w",
        "build": "sass ./src/sass/app.scss ./dist/css/app.css",
        "server": "node ./server.js",
        "lint": "yarn run lint:scripts && yarn run lint:styles",
        "lint:scripts": "eslint src/scripts",
        "lint:styles": "stylelint \"src/sass/**/*.{css,sass,scss,sss,less}\""
    },
    "devDependencies": {
        "@popperjs/core": "^2.11.6",
        "@roots/bud": "6.4.5",
        "@roots/bud-sass": "^6.5.1",
        "@roots/sage": "6.4.5",
        "sass": "^1.52.2"
    },
    "dependencies": {
        "bootstrap": "^5.2.2",
        "eslint": "^8.26.0",
        "eslint-plugin-import": "^2.26.0",
        "postcss-scss": "^4.0.5",
        "select2": "^4.1.0-rc.0",
        "slick-carousel": "^1.8.1",
        "stylelint": "^14.14.0",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-config-standard-scss": "^6.0.0"
    }
}
